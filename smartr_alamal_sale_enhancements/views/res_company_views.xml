<odoo>
    <record id="view_smartr_alamal_sale_enhancements_res_company_form" model="ir.ui.view">
        <field name="name">view.smartr.alamal.sale.enhancements.res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='color']" position="after">
                <field name="is_main_company"/>
            </xpath>
        </field>
    </record>
</odoo>